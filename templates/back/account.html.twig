{% extends 'back/base.html.twig' %}

{% block title %}{{parent()}} - Compte {% endblock %}

{% block body %}



<div class="account-wrapper">

    <div class="account-infos">
        <h1>Gestion du compte</h1>

        <div class="form-wrapper">
            <p class="form-reducer">_</p>
            <p>Modifier email</p>
            {{ form_start(email_form, {'name': 'email_form', "action" : path('account_modify_email')}) }}
                {{ form_errors(email_form)}}
                {{ form_row(email_form.username) }}
                {{ form_row(email_form.save, {'label' : "Sauvegarder" }) }}
            {{ form_end(email_form) }}
        </div>

        <div class="form-wrapper">
            <p class="form-reducer">_</p>
            <p>Modifier mot de passe</p>
            {{ form_start(password_form, {'name': 'password_form', "action" : path('account_modify_password')}) }}
                {{ form_row(password_form.new_password, {'label' : "Nouveau mot de passe" }) }}
                {{ form_row(password_form.new_password_retyped, {'label' : "Retapez vore mot de passe" } ) }}
                {{ form_row(password_form.sauvegarder, {'label' : "Sauvegarder" }) }}
            {{ form_end(password_form) }}
        </div>
    </div>

    
</div>
{% endblock %}