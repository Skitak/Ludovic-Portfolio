{% extends 'front/base.html.twig' %}

{% block body %}
<article class="front-contact">
<div class="bug-fixing-div">
    <div class="about-me">
        <img src="{{ asset('images/profil.jpg')}}">
        <h1>{{ user.aboutTitle }}</h1>
        <hr class="small-separator"/>
        <div class="quill-edit">{{ user.about | raw }}</div>
    </div>
    <hr class="big-separator"/>
    <div class="contact">
        <h1>Contact me</h1>
        <div class="contact-informations">
            <p>(+33) 6 33 07 09 23</p>
            <p><a href="mailto:ludovic.moge@gmail.com" target="_top">ludovic.moge@gmail.com</a></p>
        </div>
        {{ form_start(form) }}
        <div class="person-informations">
        {{ form_row(form.nom, {"label" : "Name"}) }}
        {{ form_row(form.email) }}
        </div>
        {{ form_row(form.objet, {"label" : "Subject"}) }}
        {{ form_row(form.message) }}
        {{ form_widget(form.envoyer, {"label" : "Send"}) }}
        {{ form_end(form) }}
    </div>
    <hr class="big-separator"/>
    <div class="resume">
        <h1>Resume</h1>
        <div class="download-links">
            <a href="{{asset('/images/MogeLudovicResume_en.pdf')}}" target="_blank">English</a>
            <a href="{{asset('/images/MogeLudovicCV_fr.pdf')}}" target="_blank">Fran√ßais</a>
        </div>

    </div>
</div>
</article>
{% endblock %}
{% block javascripts %} {{ parent() }} {% endblock %}