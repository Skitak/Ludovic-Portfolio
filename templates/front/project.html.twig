<article class="front-project">
    <div class="caroussel-wrapper">
        {% for image in project.images %}
        <img src="{{ asset('/images/projets/' ~ image.image) }}"/>
        {% endfor %}
    </div>
    <header> <h1>{{ project.name }}</h1> 
        <div class="meta-data">
            <p class="date">{{ project.date|date("M Y") }}</p>
            <p> 
                {% if project.context is not empty %}
                <span class="context">{{ project.context.value }}</span> project 
                {% endif %}
                as a : 
                    {% for role in project.roles %}
                        <span class="role">{{ role.value }}</span>
                        {% if loop.last %} 
                        {% elseif loop.revindex0 == 1 %} and 
                        {% else %}, 
                        {% endif %}
                    {% endfor %}
                </p>
        </div>
    </header>
    <div class="description quill-edit">{{ project.description | raw }}</div>
</article>